if len(redes) == 0:
    print("No se encontraron redes.")
else:
    print(f"\nSe encontraron {len(redes)} redes:\n")
    for i, red in enumerate(redes):
        ssid = red[0].decode('utf-8')  # Nombre de la red
        rssi = red[3]  # Intensidad de señal
        seguridad = red[4]  # Tipo de seguridad
        tipo = "Abierta" if seguridad == 0 else "Segura"
        
        print(f"{i+1}. SSID: {ssid}  |  Señal: {rssi} dBm  |  Seguridad: {tipo}")

time.sleep(5)
  
